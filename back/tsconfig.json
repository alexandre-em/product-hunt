{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["./src/types"],
    "typeRoots": ["./@types", "./src/types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}
